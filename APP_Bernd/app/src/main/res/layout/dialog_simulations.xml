<RadioGroup
    android:layout_width="match_parent"
    android:id="@+id/alarmGroup"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RadioButton android:id="@+id/Sirenenalarm"
            android:text="@string/sirenAlarm"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dialog_margin"
            android:layout_marginRight="@dimen/dialog_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_siren"
        android:layout_marginTop="-15dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="@dimen/dialog_margin"/>

    <RadioButton android:id="@+id/StillerAlarm"
        android:text="@string/silentAlarm"
        android:layout_height="40dp"
        android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dialog_margin"
            android:layout_marginRight="@dimen/dialog_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_silent"
        android:layout_marginTop="-15dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="@dimen/dialog_margin"/>
</RadioGroup>